<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12px"
    android:paddingRight="12px"
    android:background="@drawable/contents_bg01"
    >

    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_bg"
        android:gravity="center"
    >
        <TextView
            android:id="@+id/txt_hour"
            android:layout_width="220px"
            android:layout_height="wrap_content"
            android:textColor="#E0A025"
            android:textSize="200px"
            android:gravity="right"
            android:text="00"
            android:textStyle="bold"
            android:layout_marginTop="-15px"
            android:layout_marginBottom="-15px"
        />

        <LinearLayout
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="15px"
            android:paddingTop="20px"
        >
            <TextView
                android:id="@+id/txt_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="#0093D1"
                android:textStyle="bold"
                android:text="01/01"
            />
            <TextView
                android:id="@+id/txt_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-18px"
                android:textColor="#CCE0A025"
                android:textSize="120px"
                android:text="00"
            />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_watt"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_time"
        android:background="@drawable/round_bg"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
    >
        <TextView
            android:id="@+id/txt_watt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15px"
            android:layout_marginRight="20px"
            android:textSize="24px"
            android:textColor="#D8D8D8"
            android:text=""
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-38px"
        >
            <TextView
                android:id="@+id/txt_watt"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:textColor="#F2635F"
                android:textSize="130px"
                android:gravity="right"
                android:text="--.-"
            />
            <TextView
                android:id="@+id/txt_watt_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0093D1"
                android:textSize="110px"
                android:text="W"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_watt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-27px"
            android:layout_marginBottom="14px"
            android:textSize="18px"
            android:textColor="#D8D8D8"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_temp"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_bg"
        android:layout_alignParentRight="true"
        android:paddingLeft="20px"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/txt_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F2635F"
                android:textSize="75px"
                android:gravity="center"
                android:text="N/A"
                android:layout_weight="1"
            />
            <TextView
                android:id="@+id/txt_humi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0093D1"
                android:textSize="75px"
                android:gravity="center"
                android:text="N/A"
                android:layout_weight="1"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_temp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-10px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="15px"
            android:textSize="24px"
            android:textColor="#D8D8D8"
            android:text="-"
        />

    </LinearLayout>


    <Button
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTING"
    />


</RelativeLayout>